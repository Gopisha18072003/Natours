extends base

block overlay 
    .overlay
        .overlay__content
            .header
                h2 Edit Your Review
                a(href='/my-reviews') X
            form(id='edit-review' data-user-id=`${selectedReview.user._id}` data-review-id=`${selectedReview._id}` )
                .form__group-edit
                    label(for="review") Review
                    input.form__input(type="text" name="review" value=`${selectedReview.review}`  id='saved-review' )
                .form__group-edit
                    label(for="rating") Rating
                    input.form__input(type="number" name="rating" min="1" max="5" value=`${selectedReview.rating}` id='saved-rating')
                button#save-edit.btn.btn--green.btn--small Save